<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>
    <div class="admin-dashboard">
        <h1>Admin Dashboard</h1>

        <div class="dashboard-stats">
            <div class="stat-card">
                <h3>Total Users</h3>
                <p>{{totalUsers}}</p>
            </div>
            <div class="stat-card">
                <h3>Total Quizzes</h3>
                <p>{{totalQuizzes}}</p>
            </div>
            <div class="stat-card">
                <h3>Active Today</h3>
                <p>{{activeUsers}}</p>
            </div>
            <div class="stat-card">
                <h3>Quizzes Taken Today</h3>
                <p>{{stats.quizzesToday}}</p>
            </div>
        </div>

        <section class="admin-section">
            <h2>User Management</h2>
            <div class="search-bar">
                <input type="text" placeholder="Search users..." id="user-search">
            </div>
        </section>

        <section class="admin-section">
            <h2>Quiz Management</h2>
            <div class="action-buttons">
                <button class="btn-primary" onclick="createQuiz()">Create New Quiz</button>
                <button class="btn-secondary" onclick="viewAllQuizzes()">View All Quizzes</button>
            </div>
        </section>

        <section class="admin-section">
            <h2>Reports & Analytics</h2>
            <div class="reports-grid">
                <div class="report-card">
                    <h3>Popular Categories</h3>
                </div>
                <div class="report-card">
                    <h3>User Activity</h3>
                </div>
                <div class="report-card">
                    <h3>Quiz Performance</h3>
                </div>
            </div>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/dashboard.js"></script>
</body>

</html>