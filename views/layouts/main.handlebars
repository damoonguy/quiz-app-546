<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/index.css">
    <title>Document</title>
</head>
<body>
  <div class="layout">
    <!-- Top Bar -->
    <span class="top-bar">
      <input type="text" placeholder="Search..." class="search-bar" />
      <button class="profile-settings">Profile Settings</button>
      {{#if user}}
        {{#if (eq user.role 'admin')}}
        <button><a href="/admin/dashboard">Admin Dashboard</a></button>
        {{else}}
        <button><a href="/users/dashboard">My Dashboard</a></button>
        {{/if}}
      {{else}}
        <a href="/login">Login</a>
        <a href="/register">Register</a>
      {{/if}}
    </span>
    
    <!-- Main Content Layout -->
    <div class="main-layout">
      <!-- Sidebar -->
      <aside class="sidebar">
        <ul class="misc-items">
          <!-- User and Admin Dashboards here for now -->
          <li><a href="/users/dashboard">User Dashboard</a></li>
          <li><a href="/admin/dashboard">Admin Dashboard</a></li>
          <li><a href="#">History</a></li>
          <li><a href="#">Saved Quizzes</a></li>
          <li><a href="#">Dashboard</a></li>
        </ul>
      </aside>
    

    <!-- Main Content Area -->
    <main class="content">
      {{!-- Content goes here --}}
      {{{body}}}
    </main>
    </div>
  </div>
</body>
</html>